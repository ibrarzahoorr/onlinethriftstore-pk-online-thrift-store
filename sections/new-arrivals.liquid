{% comment %}
  Section: New Arrivals with Sale Badge + Quick View Button
{% endcomment %}

<section class="new-arrivals">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="section-title">{{ section.settings.heading }}</h2>
    {% endif %}

    <div class="new-arrivals-grid">
      {% assign collection = collections[section.settings.collection] %}
      {% if collection != blank %}
        {% for product in collection.products limit: section.settings.products_limit %}
          <div class="product-card">
            <div class="product-image">
              <img 
                src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}" 
                alt="{{ product.title }}"
                class="fixed-image"
              >

              <!-- Sale badge -->
              {% if section.settings.show_sale_badge and product.compare_at_price > product.price %}
                <span class="sale-badge">Sale</span>
              {% endif %}

              <!-- New badge -->
              {% if section.settings.show_badge %}
                <span class="tag">New</span>
              {% endif %}

              <!-- Quick View Button -->
              <button 
                type="button" 
                class="quick-view-btn" 
                data-product-handle="{{ product.handle }}">
                âžš
              </button>
            </div>

            <div class="product-info">
              <h3 class="product-title">{{ product.title }}</h3>
              <p class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="sale-price">{{ product.price | money }}</span>
                  <span class="compare-price">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span>{{ product.price | money }}</span>
                {% endif %}
              </p>

              <!-- Add to Cart -->
              <form method="post" action="/cart/add" class="add-to-cart-form">
                <input type="hidden" name="id" value="{{ product.variants.first.id }}">
                <button type="submit" class="add-to-cart-btn">Add to Cart</button>
              </form>
            </div>
          </div>
        {% endfor %}
      {% else %}
        <p>No products found.</p>
      {% endif %}
    </div>
  </div>
</section>

<!-- Render Quick View snippet -->
{% render 'quick-view' %}

<style>
.new-arrivals {
  background: #f9f9f9;
  padding: 40px 20px;
}
.section-title {
  font-size: 28px;
  font-weight: bold;
  margin-bottom: 30px;
}
.new-arrivals-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
  gap: 20px;
}
.product-card {
  background: #fff;
  border-radius: 16px;
  overflow: hidden;
  padding: 15px;
  box-shadow: 0 2px 6px rgba(0,0,0,0.08);
  transition: transform 0.2s ease;
  display: flex;
  flex-direction: column;
}
.product-card:hover { transform: translateY(-4px); }
.product-image { position: relative; text-align: center; }
.fixed-image {
  width: 100%;
  height: 250px;
  object-fit: cover;
  border-radius: 12px;
}
/* Sale badge left */
.sale-badge {
  position: absolute;
  top: 10px;
  left: 10px;
  background: red;
  color: white;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 12px;
}
/* New badge right */
.product-image .tag {
  position: absolute;
  top: 10px;
  right: 10px;
  background: black;
  color: white;
  font-size: 12px;
  padding: 4px 8px;
  border-radius: 12px;
}
/* Quick View Button */
.quick-view-btn {
  position: absolute;
  top: 45px;
  right: 10px;
  background: white;
  border: 1px solid #ddd;
  border-radius: 50%;
  width: 32px;
  height: 32px;
  font-size: 16px;
  transform: rotate(45deg);
  cursor: pointer;
  transition: all 0.3s ease;
}
.quick-view-btn:hover { background: black; color: white; }

.product-info { text-align: center; margin-top: 10px; }
.product-title { font-size: 16px; font-weight: 600; margin-bottom: 6px; }
.product-price { font-size: 15px; color: #333; margin-bottom: 10px; }
.product-price .compare-price {
  text-decoration: line-through;
  margin-left: 6px;
  font-size: 13px;
  color: #999;
}
.sale-price { color: #d32f2f; font-weight: bold; }
.add-to-cart-btn {
  width: 100%;
  background: black;
  color: white;
  font-size: 14px;
  font-weight: 600;
  padding: 10px 15px;
  border: none;
  border-radius: 12px;
  cursor: pointer;
  transition: background 0.3s ease;
}
.add-to-cart-btn:hover { background: #333; }
</style>

{% schema %}
{
  "name": "New Arrivals",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "New Arrivals" },
    { "type": "collection", "id": "collection", "label": "Select Collection" },
    { "type": "range", "id": "products_limit", "label": "Number of Products", "min": 2, "max": 12, "default": 6 },
    { "type": "checkbox", "id": "show_badge", "label": "Show 'New' Badge", "default": true },
    { "type": "checkbox", "id": "show_sale_badge", "label": "Show 'Sale' Badge", "default": true }
  ],
  "presets": [
    { "name": "New Arrivals with Quick View", "category": "Products" }
  ]
}
{% endschema %}
