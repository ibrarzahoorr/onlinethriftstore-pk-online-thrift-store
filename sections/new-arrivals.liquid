{% comment %}
  Section: New Arrivals with Sale Badge + Quick View + Slider Option
{% endcomment %}

<section class="new-arrivals">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2 class="section-title">{{ section.settings.heading }}</h2>
    {% endif %}

    {% assign collection = collections[section.settings.collection] %}
    {% if collection != blank %}
      {% case section.settings.display_mode %}
        {% when 'all' %}
          {% assign products = collection.products %}
        {% when 'grid' %}
          {% assign products = collection.products | slice: 0, section.settings.products_limit %}
        {% when 'slider' %}
          {% assign products = collection.products %}
      {% endcase %}

      <div class="new-arrivals-grid {% if section.settings.display_mode == 'slider' %}slider{% endif %}">
        {% for product in products %}
          <div class="product-card">
            <div class="product-image">
              <img 
                src="{{ product.featured_image | img_url: '400x400', crop: 'center' }}" 
                alt="{{ product.title }}"
                class="fixed-image"
              >

              {% if section.settings.show_sale_badge and product.compare_at_price > product.price %}
                <span class="sale-badge">Sale</span>
              {% endif %}

              {% if section.settings.show_badge %}
                <span class="tag">New</span>
              {% endif %}

              <!-- Quick View Trigger -->
              <button 
                type="button" 
                class="quick-view-btn" 
                data-product-handle="{{ product.handle }}">
                âžš
              </button>
            </div>

            <div class="product-info">
              <h3 class="product-title">{{ product.title }}</h3>
              <p class="product-price">
                {% if product.compare_at_price > product.price %}
                  <span class="sale-price">{{ product.price | money }}</span>
                  <span class="compare-price">{{ product.compare_at_price | money }}</span>
                {% else %}
                  <span>{{ product.price | money }}</span>
                {% endif %}
              </p>

              <button 
                type="button" 
                class="add-to-cart-btn" 
                data-variant-id="{{ product.variants.first.id }}">
                Add to Cart
              </button>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <p>No products found.</p>
    {% endif %}
  </div>
</section>

<!-- Include Quick View Modal once -->
{% render 'quick-view' %}

<style>
.section-title { font-size: 28px; font-weight: bold; margin-bottom: 30px; }
.new-arrivals-grid { display: grid; grid-template-columns: repeat(auto-fit,minmax(220px,1fr)); gap: 20px; }
.new-arrivals-grid.slider { display: flex; overflow-x: auto; gap: 20px; scroll-snap-type: x mandatory; }
.new-arrivals-grid.slider .product-card { flex: 0 0 220px; scroll-snap-align: start; }

.product-card { background:#fff; border-radius:16px; padding:15px; box-shadow:0 2px 6px rgba(0,0,0,0.08); transition:.2s; }
.product-card:hover { transform: translateY(-4px); }

.fixed-image { width:100%; height:250px; object-fit:cover; border-radius:12px; }
.sale-badge { position:absolute; top:10px; left:10px; background:red; color:#fff; font-size:12px; padding:4px 8px; border-radius:12px; }
.tag { position:absolute; top:10px; right:10px; background:black; color:white; font-size:12px; padding:4px 8px; border-radius:12px; }
.quick-view-btn { position:absolute; top:45px; right:10px; background:white; border:1px solid #ddd; border-radius:50%; width:32px; height:32px; font-size:16px; transform:rotate(45deg); cursor:pointer; }
.quick-view-btn:hover { background:black; color:white; }

.product-info { text-align:center; margin-top:10px; }
.product-title { font-size:16px; font-weight:600; margin-bottom:6px; }
.product-price { font-size:15px; color:#333; margin-bottom:10px; }
.product-price .compare-price { text-decoration:line-through; margin-left:6px; font-size:13px; color:#999; }
.sale-price { color:#d32f2f; font-weight:bold; }
.add-to-cart-btn { width:100%; background:black; color:white; font-size:14px; font-weight:600; padding:10px 15px; border:none; border-radius:12px; cursor:pointer; }
.add-to-cart-btn:hover { background:#333; }
</style>

<script>
document.addEventListener("DOMContentLoaded", function(){
  // AJAX Add to Cart
  function updateCartCount() {
    fetch("/cart.js").then(res=>res.json()).then(cart=>{
      const el=document.querySelector(".cart-count");
      if(el) el.textContent=cart.item_count;
    });
  }
  document.querySelectorAll(".add-to-cart-btn").forEach(btn=>{
    btn.addEventListener("click",function(){
      fetch("/cart/add.js",{
        method:"POST",
        headers:{"Content-Type":"application/json"},
        body:JSON.stringify({id:this.dataset.variantId,quantity:1})
      }).then(()=>updateCartCount());
    });
  });
});
</script>

{% schema %}
{
  "name": "New Arrivals",
  "settings": [
    { "type": "text", "id": "heading", "label": "Section Heading", "default": "New Arrivals" },
    { "type": "collection", "id": "collection", "label": "Select Collection" },
    { "type": "select", "id": "display_mode", "label": "Display Mode", "options": [
        { "value": "grid", "label": "Grid (Custom Limit)" },
        { "value": "all", "label": "All Products" },
        { "value": "slider", "label": "Slider" }
      ], "default": "grid"
    },
    { "type": "range", "id": "products_limit", "label": "Number of Products (Grid mode only)", "min": 2, "max": 20, "default": 6 },
    { "type": "checkbox", "id": "show_badge", "label": "Show 'New' Badge", "default": true },
    { "type": "checkbox", "id": "show_sale_badge", "label": "Show 'Sale' Badge", "default": true }
  ],
  "presets": [
    { "name": "New Arrivals with Quick View", "category": "Products" }
  ]
}
{% endschema %}
